{
  "hosting": {
    "public": "www",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "cleanUrls": true,
    "headers": [
      { "source": "**/*.html", "headers": [ { "key": "Cache-Control", "value": "no-cache" } ] },
      { "source": "/firebase-init.js", "headers": [ { "key": "Cache-Control", "value": "no-store" } ] },
      { "source": "/sw.js", "headers": [ { "key": "Cache-Control", "value": "no-cache" } ] },
      { "source": "**/*.{js,css,svg,png,jpg,webp,woff2}", "headers": [ { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" } ] }
    ]
  }
}
